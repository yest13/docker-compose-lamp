//'понедельник', 'вторник', 'среда', 'четверг', 'пятница', 'суббота', 'воскресенье'

function week ($a){
    switch ($a) {
        case 1:
            return 'понедельник';
        case 2:
            return 'вторник';
        case 3:
            return 'среда';
        case 4:
            return 'четверг';
        case 5:
            return 'пятница';
        case 6:
            return 'суббота';
        case 7:
            return 'воскресенье';
        };
};

$b = 2;
echo week($b);



